package projeler;

import java.util.Scanner;

public class odev5
{

    public static void main(String [] args)
    {
        Scanner giris = new Scanner(System.in);
        System.out.println("Kaç sayı gireceksin?");
        int n = giris.nextInt();
        System.out.println(+n+ " tane sayı giriceksiniz");

        int toplam = 0;

        for (int i = 1; i <=n; i++)
        {
            System.out.print("Sayı gir: ");
            int sayi = giris.nextInt();
            toplam += sayi;

        }
        // Ortalama
        int ort = toplam/n;
        System.out.print("Ortalama değer: " + ort);

    }
}
